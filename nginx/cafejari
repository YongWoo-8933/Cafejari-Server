
server {
    listen 80;
    server_name cafejari.co.kr;
    client_max_body_size 256M;
    charset utf-8mb4;

    location / {
        proxy_pass http://cafejari.co.kr;

        # Do not change this
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    location /static/ {
        alias /static/;
    }

    location /media/ {
        alias /media/;
    }
}